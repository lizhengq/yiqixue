page{background:#f5f5f5;}

.main{width:100%;color:#212121;text-align: center;padding-top:210rpx;}
.main .title{font-size:44rpx;font-weight: bold;letter-spacing: 10rpx;}
.main .time{font-size:42rpx;padding:50rpx 0 0 0;margin-bottom:155rpx;}
.main .one-line{width:100%;height:4rpx;background:#24C747;}
.footer{position: fixed;bottom:0;left:0;right:0;width:100%;height:260rpx;background:#fff;text-align: center;color:#999;font-size:24rpx;padding:49rpx 109rpx 0 109rpx;}
.footer .again{width:76rpx;height:76rpx;background:url('http://amcimg.vipyqx.com/commFile/oss/image/download/c043058c5d054aed9182677148e70247.png') no-repeat;background-size: contain;}

.footer .again-wrap,.footer .finish-wrap{margin-top:25rpx;}
.footer .plays{margin:0 0 0 130rpx;}
.footer .play-status{width:120rpx;height:120rpx;}
.footer .txt{padding:10rpx 0 0 0;}
.footer .pause{background:url('http://amcimg.vipyqx.com/commFile/oss/image/download/9c424be6caf34d498cc26ce42a798cb7.png') no-repeat;background-size: contain;}

.footer .play{background:url('http://amcimg.vipyqx.com/commFile/oss/image/download/f6debdbccd0040a0a906bfbf0b84d934.png') no-repeat;background-size: contain;}



.footer .finish{width:76rpx;height:76rpx;background:url('http://amcimg.vipyqx.com/commFile/oss/image/download/b55dce26180d4af9be00fe2827ccb33c.png') no-repeat;background-size: contain;}

.mask{width:100vw;height:100vh;background:rgba(0,0,0,.7);position: fixed;z-index: 999;top:0;right:0;bottom:0;left:0;animation: fades 0.2s forwards;-webkit-animation: fades 0.2s forwards;}
.mask .loads{width:130rpx;color:#27C84A;text-align: center;position: absolute;top:50%;left:50%;transform: translate(-50%,-50%);-webkit-transform: translate(-50%,-50%);}
.mask .loads label,
.mask .loads text{display:block;font-size:24rpx;}
.mask .loads label{width:61rpx;height:60rpx;background:url('http://amcimg.vipyqx.com/commFile/oss/image/download/0c26b195fac142daa99576b05a47741d.png') no-repeat;background-size:contain;margin:0 auto;animation: loads 1s linear infinite;-webkit-animation: loads 1s linear infinite;}
.mask .loads text{padding-top:20rpx;}

@keyframes loads{
  from{transform: rotate(0deg);}
  to{transform: rotate(360deg);}
}

@-webkit-keyframes loads{
  from{-webkit-transform: rotate(0deg);}
  to{-webkit-transform: rotate(360deg);}
}

@keyframes fades{
  from{opacity:0;filter:alpah(opacity=0);}
  to{opacity:1;filter:alpah(opacity=100);}
}

@-webkit-keyframes fades{
  from{opacity:0;filter:alpah(opacity=0);}
  to{opacity:1;filter:alpah(opacity=100);}
}