page{background:#f5f5f5;}
.poems-wrap{text-align: center;position: absolute;top:0;left:0;right:0;bottom:260rpx;}

.h2{padding:87rpx 0 10rpx 0;}
.h3{padding:0 0 20rpx 0;}

.poems-wrap text{display:inline-block;width:75rpx;}
.poems-wrap .h2-pinyin text{color:#1c1c1c;font-size:24rpx;}
.poems-wrap .h2-txt text{color:#212121;font-size:44rpx;}

.poems-wrap .h3-pinyin text,
.poems-wrap .li-pinyin text{color:#1C1C1C;font-size:20rpx;}
.poems-wrap .h3-txt text,
.poems-wrap .li-text text{color:#212121;font-size:32rpx;}



.footer{position: fixed;bottom:0;left:0;right:0;width:100%;height:260rpx;background:#fff;text-align: center;color:#999;font-size:24rpx;padding:49rpx 109rpx 0 109rpx;}
.footer .try-listen{width:76rpx;height:76rpx;}

.red{color:red !important;}

.footer .listen-wrap,.footer .again-wrap{margin-top:25rpx;}
.footer .score{margin:25rpx 0 0 130rpx;}
.footer .score-status{width:120rpx;height:120rpx;border-radius: 50%;border:4rpx solid #24C747;background:#EBFFEF;padding:15rpx 0 0 15rpx;}
.score-status text,
.score-status label{display:block;}
.score-status text{font-size:54rpx;color:#24C747;}
.score-status label{font-size:24rpx;color:#24C747;margin-top:30rpx}
.footer .txt{padding:10rpx 0 0 0;}

.footer .play{background:url('http://amcimg.vipyqx.com/commFile/oss/image/download/f6debdbccd0040a0a906bfbf0b84d934.png') no-repeat;background-size: contain;} 
.footer .pause{background:url('http://amcimg.vipyqx.com/commFile/oss/image/download/c73526be86764dd9bc59c3e5e09afed8.png') no-repeat;background-size: contain;} 

.footer .again{width:76rpx;height:76rpx;background:url('http://amcimg.vipyqx.com/commFile/oss/image/download/c043058c5d054aed9182677148e70247.png') no-repeat;background-size: contain;}
.progress{position:absolute;top:-16rpx;left:0;right:0;}
.progress slider{margin:0 8px;}
.progress .times text{display:block;font-size:24rpx;color:#cccccc;}
.progress .times text:nth-child(1){padding:0 0 0 30rpx;}
.progress .times text:nth-child(2){padding:0 30rpx 0 0;}

.mask{width:100vw;height:100vh;background:rgba(0,0,0,.7);position: fixed;z-index: 999;top:0;right:0;bottom:0;left:0;animation: fades 0.2s forwards;-webkit-animation: fades 0.2s forwards;}
.mask .loadings{width:300rpx;height:280rpx;color:#27C84A;text-align: center;position: absolute;top:50%;left:50%;transform: translate(-50%,-50%);-webkit-transform: translate(-50%,-50%);background:#fff;border-radius:12rpx;padding-top:44rpx;}
.mask .loadings label,
.mask .loadings text{display:block;font-size:28rpx;color:#212121}
.mask .loadings label{width:146rpx;height:133rpx;background:url('http://amcimg.vipyqx.com/commFile/oss/image/download/0c26b195fac142daa99576b05a47741d.png') no-repeat;background-size:contain;margin:0 auto;margin-bottom:15rpx;}
.mask .loadings text{padding-top:20rpx;}

.mask{width:100vw;height:100vh;background:rgba(0,0,0,.7);position: fixed;z-index: 999;top:0;right:0;bottom:0;left:0;animation: fades 0.2s forwards;-webkit-animation: fades 0.2s forwards;}
.mask .ifAgain{width:520rpx;color:#27C84A;text-align: center;position: absolute;top:50%;left:50%;transform: translate(-50%,-50%);-webkit-transform: translate(-50%,-50%);background:#fff;border-radius:12rpx;padding-top:44rpx;overflow: hidden;}
.mask .ifAgain .top{width:100%;height:16rpx;background:#24C791;position: absolute;top:0;}
.mask .ifAgain .title{font-size:36rpx;color:#212121;text-align: center;line-height:1;margin-bottom:23rpx;}
.mask .ifAgain .detail{font-size:24rpx;color:#212121;text-align: center;line-height:1;margin-bottom:34rpx;}
.mask .ifAgain .btns{width:100%;font-size:36rpx;color:#212121;line-height:1;padding:33rpx 0;border-top:1px solid #e6e6e6;}
.mask .ifAgain label,
.mask .ifAgain text{display:block;font-size:28rpx;color:#212121}
.mask .ifAgain label{width:217rpx;height:184rpx;background:url('http://amcimg.vipyqx.com/commFile/oss/image/download/bd61fcdc136042329f72076004831f04.png') no-repeat;background-size:contain;margin:0 auto;margin-bottom:34rpx;}
.mask .ifAgain text{padding-top:20rpx;}


@keyframes fades{
  from{opacity:0;filter:alpah(opacity=0);}
  to{opacity:1;filter:alpah(opacity=100);}
}

@-webkit-keyframes fades{
  from{opacity:0;filter:alpah(opacity=0);}
  to{opacity:1;filter:alpah(opacity=100);}
}
