.body-wrap{width:100%;padding:0 30rpx;padding-top:50rpx;}
.body-wrap .detail{font-size:30rpx;color:#000;font-weight: bold;margin-bottom:60rpx;text-align: center;}
.body-wrap .inp{position: relative;color:#000;font-weight: bold;border-bottom:1px solid #C2C2CA;margin-bottom:40rpx;padding-bottom:30rpx;}
.body-wrap .inp label{position: absolute;left:0;top:0;font-size:30rpx;}
.body-wrap .inp input{padding:0 0 0 130rpx;width:40%;}
.body-wrap .btn{width:100%;height:94rpx;line-height:94rpx;border-radius: 12rpx;color:#fff;font-size:38rpx;background:#24C791;text-align: center;}
.body-wrap .inp .icons{position: absolute;width:250rpx;height:30rpx;right:0;top:5rpx;font-size:30rpx;color:#B3B3B3;font-weight: normal;text-align: right;}

.body-wrap .disabled{opacity: 0.5;filter:alpha(opacity=50);}