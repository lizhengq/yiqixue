page{background:#f0f0f0}
.nav{width:100%;height:112rpx;background:#fff;position: fixed;left:0;top:0;right:0;z-index: 9;}
.nav .nav-list{width:120rpx;height:52rpx;border-radius: 30rpx;background:#F5F5F5;border:1px solid #d1d1d1;font-size:28rpx;color:#212121;text-align: center;line-height:52rpx;margin-top:30rpx;margin-left:30rpx;}

.list-wrap{position: absolute;left:0;top:112rpx;right:0;bottom:0;}
scroll-view{position: absolute;top:0;bottom:0;left:0;right:0;}
.nav .focus{border:1px solid #bed9ff;background:#e5f0ff;color:#70aafb;}

.list-con{padding:0 30rpx 0 30rpx;}
.list-wrap .h2{font-size:40rpx;color:#636A77;line-height:1;padding:36rpx 0 38rpx 0;}
.list-wrap .li{width:160rpx;height:190rpx;text-align: center;position: relative;line-height:1;margin-right:100rpx;margin-bottom:30rpx;}
.list-wrap .li:nth-child(3n+0){margin-right:0;}
.list-wrap .liwc{background:url('http://amcimg.vipyqx.com/commFile/oss/image/download/d11b43ed6cba42c09137a5a9cb31ea0b.png') no-repeat;background-size:contain;}
.list-wrap .lixx{background:url('http://amcimg.vipyqx.com/commFile/oss/image/download/0e53777535934a7ea2577dea9e775f35.png') no-repeat;background-size:contain;}
.list-wrap .lixx .title,
.list-wrap .lixx .grade{color:#fff !important;}
.list-wrap .lixx .sections{color:#A1B9E6 !important;}

.list-wrap .li .top-icon{width:80rpx;height:80rpx;position: absolute;top:0;right:0;}
.list-wrap .li .wc{background:url('http://amcimg.vipyqx.com/commFile/oss/image/download/3a519be5d8804db78e0c058eba3951a0.png') no-repeat;background-size:contain;}
.list-wrap .li .xx{background:url('http://amcimg.vipyqx.com/commFile/oss/image/download/909b8348ed2b4c95a125c9eb442cca63.png') no-repeat;background-size:contain;}
.list-wrap .li .title{padding:46rpx 0 20rpx 0;}
.list-wrap .li .title,
.list-wrap .li .grade,
.list-wrap .li .sections{display:block;color:#212121;font-size:24rpx;padding:25rpx 0 0 0;}

.list-wrap .li .sections{font-size:20rpx;color:#999;}
